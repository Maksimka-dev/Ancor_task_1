<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewLathe"
        android:layout_width="359dp"
        android:layout_height="309dp"
        android:layout_margin="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewModelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/customBlack"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLathe"
        tools:text="Text" />

    <TextView
        android:id="@+id/textViewProducer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/customBlack"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewModelName"
        tools:text="TextView" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProducer"
        app:layout_constraintVertical_bias="0.0">
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/country_name"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                tools:text="Test"
                android:textSize="20sp">
            </TextView>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/diameter"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/textViewDiameter"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                tools:text="Test"
                android:textSize="20sp">
            </TextView>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/diameter_under_bed"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/textViewDiameterUnderBed"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                tools:text="Test"
                android:textSize="20sp">
            </TextView>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/max_length"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/textViewMaxLength"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                tools:text="Test"
                android:textSize="20sp">
            </TextView>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="@string/condition"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/textViewCondition"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                tools:text="Test"
                android:textSize="20sp">
            </TextView>

        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>